<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskandLog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskandLog"
    xmlns:view="clr-namespace:TaskandLog.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Passdown Log" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Task Assignment" ContentTemplate="{DataTemplate view:TaskAssignment}" Route="TaskAssignment" />
        <ShellContent Title="Database" ContentTemplate="{DataTemplate view:DatabasePage}" Route="DatabasePage" />
    </TabBar>

</Shell>
